<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <p>Even geduld, we overlopen momenteel de bevoegdheid van de gebruiker.</p>
                </Authorizing>
                <NotAuthorized>
                    <BnBCheckIn_Client.Pages.Authentication.RedirectToLogin>
                    </BnBCheckIn_Client.Pages.Authentication.RedirectToLogin>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, de pagina die u zoekt kon niet worden gevonden.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

