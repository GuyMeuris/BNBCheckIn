@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row p-0 m-0">
    <div class="jumbotron jumbotron-fluid" style="        color: white;
        background-image: url(/images/HeroImageBnB.jpg);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        min-width: 50vw;
        min-height: 90vh;">
        <div class="container">
            <h1>@ViewData["Title"]</h1>
            <div class="row">
                <div class="col-md-4">
                    <section>
                        <form id="account" method="post">
                            <h4>Gebruik een admin-account om in te loggen.</h4>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email">E-mail</label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password">Paswoord</label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Log in</button>
                            </div>
                            <hr />
                        </form>
                    </section>
                </div>
                <div class="col-md-6 col-md-offset-2">
                    <section>
                        <br />
                        <h4>Heeft u nog geen admin-account?</h4>
                        <hr />
                        <p>Contacteer het geweldige team van Bart &amp Guy voor meer informatie. </p>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
