@using BNBCheckInServer.Components
@inject NavigationManager navManager

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" >
                <NotAuthorized>
                    <p>Om hiervan gebruik te maken, dient men ingelogd te zijn met een admin-account.</p>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, de pagina die u zoekt kon niet worden gevonden.</p>
                @*@{
                    var returnUrl = navManager.ToBaseRelativePath(navManager.Uri);
                    <RedirectToLogin ReturnUrl="@returnUrl" />

                }*@
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>